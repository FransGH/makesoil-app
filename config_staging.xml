<?xml version='1.0' encoding='utf-8'?>
<widget id="org.staging.makesoil.app" version="1.2.7" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="schemas.android.com/apk/res/android">
    <name>MakeSoil</name>
    <description>MakeSoil Staging</description>
    <author email="dev@makesoil.org" href="https://makesoil.org">
        MakeSoil Dev Team
    </author>
    <content src="index.html"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <access origin="about:*"/>
    <allow-navigation href="about:"/>
    <access origin="https://makesoil2-staging.herokuapp.com"/>
    <allow-navigation href="makesoil2-staging.herokuapp.com/*"/>
    <allow-navigation href="https://www.youtube.com/*"/>
    <allow-navigation href="https://www.dafdirect.org/*"/>
    <allow-navigation href="https://donorbox.org/*"/>
    <platform name="ios">
        <edit-config file="*-Info.plist" mode="merge" target="ITSAppUsesNonExemptEncryption">
            <false/>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>MakeSoil only uses your location to match you with nearby soil sites.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysAndWhenInUseUsageDescription">
            <string>MakeSoil only uses your location to match you with nearby soil sites.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
            <string>MakeSoil only uses your location to match you with nearby soil sites.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>MakeSoil only uses your camera to enable taking and uploading photos.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>MakeSoil only uses your photo library to allow selection and upload of photos.</string>
        </edit-config>
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/staging/ios/icon-60@3x.png" width="180" height="180"/>
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/staging/ios/icon-60.png" width="60" height="60"/>
        <icon src="res/staging/ios/icon-60@2x.png" width="120" height="120"/>
        <!-- iPad -->
        <icon src="res/staging/ios/icon-76.png" width="76" height="76"/>
        <icon src="res/staging/ios/icon-76@2x.png" width="152" height="152"/>
        <!-- Spotlight Icon -->
        <icon src="res/staging/ios/icon-20.png" width="20" height="20"/>
        <icon src="res/staging/ios/icon-20@2x.png" width="40" height="40"/>
        <icon src="res/staging/ios/icon-40.png" width="40" height="40"/>
        <icon src="res/staging/ios/icon-40@2x.png" width="80" height="80"/>
        <icon src="res/staging/ios/icon-40@3x.png" width="120" height="120"/>
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/staging/ios/icon.png" width="57" height="57"/>
        <icon src="res/staging/ios/icon@2x.png" width="114" height="114"/>
        <!-- iPad -->
        <icon src="res/staging/ios/icon-72.png" width="72" height="72"/>
        <icon src="res/staging/ios/icon-72@2x.png" width="144" height="144"/>
        <!-- iPad Pro -->
        <icon src="res/staging/ios/icon-167.png" width="167" height="167"/>
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/staging/ios/icon-29.png" width="29" height="29"/>
        <icon src="res/staging/ios/icon-29@2x.png" width="58" height="58"/>
        <icon src="res/staging/ios/icon-29@3x.png" width="87" height="87"/>
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/staging/ios/icon-50.png" width="50" height="50"/>
        <icon src="res/staging/ios/icon-50@2x.png" width="100" height="100"/>
        <!-- iTunes Marketing Image -->
        <icon src="res/staging/ios/icon-1024.png" width="1024" height="1024"/>
        <splash src="res/staging/ios/Default@2x~universal~anyany.png"/>
    </platform>
    <platform name="android">
        <resource-file src="res/staging/android/google-services.json" target="app/google-services.json"/>
        <preference name="AndroidWindowSplashScreenBackground" value="#45B139"/>
        <preference name="AndroidWindowSplashScreenAnimatedIcon"
                    value="platforms/android/app/src/main/res/drawable/ic_splashscreen.xml"/>
        <preference name="AndroidXEnabled" value="true"/>
        <preference name="android-targetSdkVersion" value="32"/>
        <preference name="GradlePluginKotlinVersion" value="1.6.20"/>
        <preference name="GradlePluginGoogleServicesEnabled" value="true"/>
    </platform>
    <preference name="AppendUserAgent" value="MakeSoil"/>
    <preference name="targetDomain" value="https://makesoil2-staging.herokuapp.com"/>
</widget>
