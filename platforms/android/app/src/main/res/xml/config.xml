<?xml version='1.0' encoding='utf-8'?>
<widget id="org.staging.makesoil.app" version="1.0.17" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Badge">
        <param name="android-package" value="de.appplant.cordova.plugin.badge.Badge" />
    </feature>
    <feature name="PushNotification">
        <param name="android-package" value="notifications.Notifications" />
    </feature>
    <feature name="CustomConfigParameters">
        <param name="android-package" value="org.apache.cordova.customconfigparameters.CustomConfigParameters" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="NativeStorage">
        <param name="android-package" value="NativeStorage" />
    </feature>
    <name>MakeSoil</name>
    <description>MakeSoil Staging</description>
    <author email="dev@makesoil.org" href="https://makesoil.org">
        MakeSoil Dev Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <access origin="about:*" />
    <allow-navigation href="about:" />
    <access origin="https://makesoil-testing.herokuapp.com" />
    <allow-navigation href="makesoil-testing.herokuapp.com/*" />
    <allow-navigation href="https://www.youtube.com/*" />
    <allow-navigation href="https://www.dafdirect.org/*" />
    <allow-navigation href="https://donorbox.org/*" />
    <splash src="res/staging/ios/Default@2x~universal~anyany.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="GradlePluginGoogleServicesEnabled" value="false" />
    <preference name="GradlePluginKotlinCodeStyle" value="official" />
    <preference name="GradlePluginKotlinVersion" value="1.3.50" />
    <preference name="android-targetSdkVersion" value="32" />
    <preference name="AndroidXEnabled" value="false" />
    <preference name="GradlePluginKotlinEnabled" value="true" />
    <preference name="AppendUserAgent" value="MakeSoil" />
    <preference name="targetDomain" value="https://makesoil-testing.herokuapp.com" />
</widget>
